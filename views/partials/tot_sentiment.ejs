
<!-- Sentiment Totals -->
<div class="widget-container boxed">
  <div class="inner">
    <h3 class="widget-title">
      Overall Sentiment
      <div class="tip">
        <img src="/assets/images/info.png">
        <div class="tiptext">
          <p>This chart shows what fraction of all the posts in the time period are positive, negative, or neutral in sentiment.</p>
          <p>We use the NLTK Sentiment Analyzer, a Python package to implement and facilitate Sentiment Analysis tasks using NLTK features and classifiers. </p>
        </div>
      </div>
    </h3>
    <div class="chart-stage" id="tot_sentiment_chart"></div>
  </div>
</div>

<script type="text/javascript">
  function makeTotSentiment() {
    var data = new google.visualization.DataTable();
    data.addColumn("string", "sentiment");
    data.addColumn("number", "count");

    var positive=0, negative=0, total=0;
    for (i = 0; i < days.length; i++) {
      positive += days[i].positive
      negative += days[i].negative
      total += days[i].total
    }
    var neutral = total - positive - negative
    data.addRow(["Positive", positive]);
    data.addRow(["Neutral", neutral]);
    data.addRow(["Negative", negative]);

    var options = {
      colors: [positiveColor, chartColors[1], negativeColor],
      chartArea: {
        width: "100%",
        height: "100%"
      },
      legend: { alignment: 'center'}
    };

    var chart = new google.visualization.PieChart(document.getElementById('tot_sentiment_chart'));
    chart.draw(data, options);
  };
</script>